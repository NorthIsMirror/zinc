# vim: ft=zsh ts=2 sw=2 et fenc=utf-8

# synopsis {{{
# By default replies with "user@host"
#
# Set segment argument 5 to change this to whatever you want.
#
# Ex: user:host
# p10k_opts[p10ks_userhost]=";;;;%n:%m"
# }}}

function p10ks_userhost () {
  [[ "$5" == "" ]] && {
    REPLY="%n@%m"
  } || {
    REPLY="$5"
  }
}
